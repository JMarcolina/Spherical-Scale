def get_radius (point1, point2):
...     diff_x = abs(point1[0] - point2[0])
...     diff_y = abs(point1[1] - point2[1])
...     diff_z = abs(point1[2] - point2[2])
...     diff_x_sqr = diff_x ** 2
...     diff_y_sqr = diff_y ** 2
...     diff_z_sqr = diff_z ** 2
...     return (sqrt(diff_x_sqr + diff_y_sqr + diff_z_sqr))
